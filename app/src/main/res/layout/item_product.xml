<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.brookers.serveraid.menu.ProductViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->viewmodel.onItemClicked()}"
        android:orientation="vertical"
        android:padding="@dimen/spacing_medium">

        <TextView
            android:id="@+id/textView_product_name"
            style="@style/TextViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:text="@{viewmodel.productName}"
            tools:text="Chicken BBQ" />


        <TextView
            android:id="@+id/textView_product_description"
            style="@style/TextViewSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:text="@{viewmodel.productDescription}"
            tools:text="Chicken in a delicious BBQ souce" />


        <TextView
            android:id="@+id/textView_product_price"
            style="@style/TextViewTertiary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            app:setPrice="@{viewmodel.productPrice}"
            tools:text="Price: $12.23" />

    </LinearLayout>

</layout>